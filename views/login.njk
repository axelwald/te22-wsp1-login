{% extends "layout.njk" %}

{% block content %}
<main>
  <h1>{{ title }}</h1>
  <p>{{ message }}</p>
  <h2>{{ views }}</h2>
  <form action="/login" method="post">
    <input required type="text" name="username" placeholder="Användarnamn">
    <input required type="password" name="password" placeholder="Lösenord">
    <button type="submit">Login</button>
  </form>
  <a href="/createuser">Skapa användare</a>


</main>
{% endblock %}